body {
width: 100vw;
background: #fff;
}

.big-photos-container {
width: 100%;
min-height: 100vh;
padding: 3.5rpx 19.4rpx;
}

.big-photos-swiper {
width: 100%;
height: 955.6rpx;
margin: 0 auto;
}

wx-swiper {
width: 100%;
height: 855.6rpx;
}

wx-swiper wx-image {
width: 100%;
height: 725.7rpx;
}

.big-photos-save {
width: 100%;
height: 87.5rpx;
color: #fff;
background: #09bb07;
position: fixed;
left: 0;
bottom: 0;
border-radius: 0;
font-size: 39.6rpx;
line-height: 87.5rpx;
text-align: center;
}

.big-photos-modal {
width: 100vw;
height: 100vh;
position: fixed;
left: 0;
top: 0;
z-index: 100;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: center;
justify-content: center;
}

.modal-mask {
width: 100vw;
height: 100vh;
position: fixed;
left: 0;
top: 0;
background: rgba(0, 0, 0, 0.5);
}

.modal-content {
width: 666rpx;
height: 635.4rpx;
position: relative;
background: #fff;
font-size: 35.4rpx;
color: #353535;
}

.modal-button {
width: 100%;
height: 87.5rpx;
color: #fff;
background: #09bb07;
border-radius: 0;
font-size: 39.6rpx;
line-height: 87.5rpx;
text-align: center;
position: absolute;
left: 0;
bottom: 0;
}

.modal-subtitle {
width: 100%;
padding: 51.4rpx 0px 0px 51.4rpx;
margin-bottom: 51.4rpx;
}

.modal-text {
width: 100%;
padding: 0px 87.5rpx 0px 51.4rpx;
line-height: 43.8rpx;
white-space: pre-wrap;
}