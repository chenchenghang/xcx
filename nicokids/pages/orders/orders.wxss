body {
width: 100vw;
background: #fff;
}

.page-title {
padding-bottom: 39.6rpx;
}

.empty-label {
font-size: 9.7rpx;
color: #ccc;
text-align: center;
vertical-align: middle;
min-height: 100vh;
}

.order-cover {
margin: -44px;
}

.order-cover wx-image {
width: 100%;
height: 279.9rpx;
}

.order-list {
padding: 0 25.7rpx;
}

.order-item {
width: 100%;
}

.order-item {
width: 96%;
border-radius: 25.7rpx;
padding: 29.9rpx;
margin: 9.7rpx auto 59.7rpx;
overflow: hidden;
box-shadow: 0px 0px 36.1rpx -6px rgba(0, 0, 0, 0.3);
transition: all 0.2s ease-in-out;
}

.order-item>wx-view {
}

.order-item:active {
-webkit-transform: scale(1.02);
transform: scale(1.02);
}

.order-info {
width: 100%;
height: 55.6rpx;
font-size: 23.6rpx;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: space-between;
justify-content: space-between;
line-height: 55.6rpx;
border-bottom: 1.4rpx solid #eee;
}

.order-number {
color: #878787;
}

.order-detail-navigate {
color: #09bb07;
}

.order-process {
width: 100%;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
margin-top: 19.4rpx;
margin-bottom: 21.5rpx;
}

.order-process-item {
width: calc((100% - 55.6rpx) / 6);
height: 101.4rpx;
position: relative;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: space-between;
justify-content: space-between;
font-size: 23.6rpx;
color: #8c8c8c;
}

.order-process-item:first-child {
width: 55.6rpx;
}

.order-process-item:first-child >.order-process-line {
display: none;
}

.order-process-line {
width: 50rpx;
height: 1.4rpx;
background: #bfbbbf;
}

.order-green-line {
width: 50rpx;
height: 3.5rpx;
background: #09bb07;
}

.order-process-text {
width: 55.6rpx;
position: absolute;
right: -9px;
bottom: 0;
}

.order-process-state {
padding: 0 9.7rpx;
height: 31.9rpx;
line-height: 29.9rpx;
color: #bda571;
font-size: 19.4rpx;
position: absolute;
border-radius: 3.5rpx;
top: -12px;
right: -35px;
border: 0.7rpx solid #bda571;
text-align: center;
z-index: 5;
white-space: nowrap;
}

.order-process-dot, .order-green-dot {
width: 55.6rpx;
height: 55.6rpx;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: center;
justify-content: center;
}

.order-process-dot>wx-view {
width: 25.7rpx;
height: 25.7rpx;
border-radius: 50%;
border: 3.5rpx solid #bfbbbf;
}

.order-green-dot>wx-view {
width: 27.8rpx;
height: 27.8rpx;
border-radius: 50%;
border: none;
background: #09bb07;
}

.take-photo-info {
width: 100%;
text-align: left;
margin-bottom: 19.4rpx;
}

.take-photo-info>wx-view:first-child {
color: #878787;
font-size: 23.6rpx;
line-height: 19.4rpx;
}

.take-photo-time {
font-size: 39.6rpx;
color: #101010;
font-weight: bold;
line-height: 57.6rpx;
font-family: 'HelveticaNeue', 'Helvetica';
}

.take-photo-store, .take-photo-address, .take-photo-phone {
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
color: #101010;
font-size: 23.6rpx;
margin-top: 17.4rpx;
}

.take-photo-store {
font-weight: bold;
}

.take-photo-address {
-webkit-flex: 1;
flex: 1;
}

.common-check-details {
width: 123.6rpx;
height: 33.3rpx;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
color: #bda571;
font-size: 19.4rpx;
margin-left: 19.4rpx;
border: 1.4rpx solid #bda571;
text-align: center;
border-radius: 3.5rpx;
padding-left: 3.5rpx;
}

.common-check-details-1 {
width: 89.6rpx;
}

.take-photo-title {
margin-top: 3.5rpx;
margin-bottom: 9.7rpx;
}

.check-details-icon {
width: 25.7rpx;
height: 21.5rpx;
vertical-align: middle;
margin-right: 1.4rpx;
}

.check-address .check-details-icon {
width: 25.7rpx;
height: 29.9rpx;
}

.check-phone .check-details-icon {
width: 23.6rpx;
height: 23.6rpx;
}

.take-photo-package {
color: #101010;
font-size: 23.6rpx;
margin-top: 19.4rpx;
font-weight: bold;
}

.order-button-group {
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: space-between;
justify-content: space-between;
padding-top: 29.9rpx;
border-top: 0.7rpx solid #efefef;
margin-top: 39.6rpx;
box-sizing: initial;
}

.order-button-group > wx-button {
outline: none;
min-width: auto !important;
width: 44%;
font-size: 27.8rpx;
}

.label-disabled {
border: none;
color: #ddd;
background-color: none;
text-align: center;
width: 100%;
font-size: 27.8rpx;
}