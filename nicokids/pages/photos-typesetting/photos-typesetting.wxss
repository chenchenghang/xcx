body {
width: 100vw;
background: #fff;
}

.photos-typesetting-container {
width: 100%;
min-height: 100vh;
padding-bottom: 119.4rpx;
}

.photos-typesetting-title {
font-weight: bold;
color: #000;
padding: 29.9rpx 29.9rpx 69.4rpx 29.9rpx;
}

.photos-typesetting-list {
width: 100%;
padding: 0 13.9rpx;
}

.photos-typesetting-item {
width: 100%;
height: 255.6rpx;
position: relative;
margin-bottom: 39.6rpx;
box-shadow: 0px 0px 5.6rpx 0px rgba(170, 170, 170, 1);
}

.photos-typesetting-item:last-child {
margin-bottom: 0;
}

.photos-typesetting-mark {
width: 29.9rpx;
height: 29.9rpx;
border-radius: 50%;
background: #c2a469;
color: #fff;
font-size: 19.4rpx;
text-align: center;
line-height: 29.9rpx;
position: absolute;
left: 13.9rpx;
top: 17.4rpx;
z-index: 100;
}

.photos-typesetting-bg {
width: 100%;
height: 100%;
border: 1.4rpx solid #ccc;
}

.photos-typesetting-bg>wx-image {
width: 100%;
height: 100%;
}

.photos-typesetting-buttons {
width: 100%;
height: 100rpx;
position: fixed;
left: 0;
bottom: 0;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: space-between;
justify-content: space-between;
z-index: 200;
}

.photos-typesetting-modify, .photos-typesetting-confirm {
width: 50%;
height: 95.8rpx;
line-height: 100rpx;
border-radius: 0;
border-right: none;
border-left: none;
}

.photos-typesetting-modal {
width: 100vw;
height: 100vh;
position: fixed;
left: 0;
top: 0;
z-index: 200;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: center;
justify-content: center;
}

.modal-mask {
width: 100vw;
height: 100vh;
position: fixed;
left: 0;
top: 0;
background: rgba(0, 0, 0, 0.5);
}

.modal-content {
width: 687.5rpx;
height: 439.6rpx;
background: #fff;
position: relative;
border-radius: 9.7rpx;
box-shadow: 3.5rpx 3.5rpx 5.6rpx rgba(0, 0, 0, 0.5);
}

.modify-modal-content {
height: 693.8rpx;
}

.modal-button-group {
width: 100%;
height: 87.5rpx;
font-size: 35.4rpx;
line-height: 87.5rpx;
text-align: center;
position: absolute;
left: 0;
bottom: 0;
display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
}

.modal-button-group>wx-button {
width: 50%;
height: 100%;
border: none;
outline: none;
background: none;
color: #c2a469;
border-radius: 0;
}

wx-button.confirm-button {
background: #259b24;
color: #fff;
}

.modal-tips {
width: 100%;
position: absolute;
left: 50%;
top: 40%;
-webkit-transform: translate(-50%, -50%);
transform: translate(-50%, -50%);
font-size: 27.8rpx;
color: #101010;
text-align: center;
}

.modify-modal-title {
padding: 51.4rpx 0px 0px 51.4rpx;
font-size: 39.6rpx;
color: #101010;
margin-bottom: 39.6rpx;
}

.modify-modal-textarea {
width: 585.4rpx;
height: 371.5rpx;
margin: 0 auto;
border: 1.4rpx solid #ccc;
}

.modify-modal-textarea>wx-textarea {
width: 585.4rpx;
height: 371.5rpx;
}